@page   "/admin/members"
@model App.Admin.User.IndexModel
@{
    ViewData["Title"] = "Danh sach các thành viên";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<p>Tổng số thành viên: @Model.totalUsers</p>


<table class="table">
    <tr>
        <th>Tên user</th>
        <th>Vai trò</th>
        <th>Tác vụ</th>
    </tr>
    @if(Model.users != null)
    {
        @foreach(var user in Model.users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    @if(string.IsNullOrEmpty(user.RoleName))
                    {
                        <a class="text-dark" asp-page="./AddRole" asp-route-id="@user.Id">+ Thêm role</a>
                    }
                    else
                    {
                        <a class="" asp-page="./AddRole" asp-route-id="@user.Id">@user.RoleName</a>
                    }
                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-page="./SetPassword" asp-route-id="@user.Id">Đặt mật khẩu</a>
                </td>
            </tr>
        }
    }
</table>

