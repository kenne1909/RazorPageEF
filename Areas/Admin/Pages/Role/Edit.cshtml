@page   "/admin/edit-role/{roleid}"
@model App.Admin.Role.EditModel
@{
    ViewData["Title"] = "Cập nhật Role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial> 

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(Model.Input != null)
            {
                <div class="form-group">
                    <label asp-for="@Model.Input.Name" class="control-label"></label>
                    <input asp-for="@Model.Input.Name" class="form-control" />
                    <span asp-validation-for="@Model.Input.Name" class="text-danger"></span>
                </div>
            }
            <div class="mb-2"></div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Danh sách Roles</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

